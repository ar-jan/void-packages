# Tarball version:
do_install() {
	vmkdir usr/bin
	vmkdir usr/lib/antigravity
	vcopy "*" usr/lib/antigravity
	ln -s /usr/lib/antigravity/bin/antigravity ${DESTDIR}/usr/bin/antigravity
}
